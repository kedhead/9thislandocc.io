<div id="instagram-feed" class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
  <!-- Loading State -->
  <div class="animate-pulse bg-gray-200 aspect-square rounded-lg"></div>
  <div class="animate-pulse bg-gray-200 aspect-square rounded-lg"></div>
  <div class="animate-pulse bg-gray-200 aspect-square rounded-lg"></div>
  <div class="animate-pulse bg-gray-200 aspect-square rounded-lg"></div>
</div>

<script>
  async function loadInstagramFeed() {
    const feedContainer = document.getElementById('instagram-feed');
    if (!feedContainer) return;

    try {
      const response = await fetch('/api/instagram');
      const result = await response.json();
      
      const mediaItems = result.data || [];
      
      if (mediaItems.length === 0) {
        feedContainer.innerHTML = '<p class="col-span-full text-center text-gray-500">No images found.</p>';
        return;
      }

      feedContainer.innerHTML = mediaItems.map((item: any) => {
        // Use thumbnail_url for videos, media_url for images
        const imageUrl = item.media_type === 'VIDEO' ? item.thumbnail_url : item.media_url;
        
        return `
          <a href="${item.permalink}" target="_blank" rel="noopener noreferrer" class="group relative block overflow-hidden rounded-lg aspect-square">
            <img 
              src="${imageUrl}" 
              alt="${item.caption ? item.caption.substring(0, 50) : 'Instagram photo'}" 
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
              <span class="text-white text-xs font-medium truncate w-full">
                ${item.caption || 'View on Instagram'}
              </span>
            </div>
            <div class="absolute top-2 right-2 bg-white/90 rounded-full p-1.5 opacity-0 group-hover:opacity-100 transition-opacity">
              <svg class="w-4 h-4 text-[var(--color-lava-orange)]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </div>
          </a>
        `;
      }).join('');
      
    } catch (error) {
      console.error('Failed to load Instagram feed:', error);
      feedContainer.innerHTML = '<p class="col-span-full text-center text-red-500">Failed to load Instagram feed.</p>';
    }
  }

  // Load when the component mounts
  loadInstagramFeed();
</script>
