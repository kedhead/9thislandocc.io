---
import Layout from '../layouts/Layout.astro';
import siteSettings from '../content/settings/site.json';
import homepageData from '../../public/data/homepage.json';

const { hero, whatWeOffer, callToAction } = homepageData;
---

<Layout title={siteSettings.siteName} description={siteSettings.description}>
  <!-- Hero Section -->
  <section class="hero-gradient text-white py-24 md:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Logo -->
      <div class="mb-8 flex justify-center">
        <img src="/logo.jpg" alt="9th Island OCC Logo" class="h-32 md:h-40 w-auto rounded-lg shadow-2xl ring-4 ring-white/30" />
      </div>

      <h1 class="text-5xl md:text-6xl font-bold mb-6">
        {hero.heading}
      </h1>
      <p class="text-2xl md:text-3xl mb-8 opacity-90">
        {hero.tagline}
      </p>
      <p class="text-xl mb-10 max-w-3xl mx-auto">
        {hero.description}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={hero.primaryButton.link} class="btn-lava px-8 py-4 rounded-full text-lg font-semibold">
          {hero.primaryButton.text}
        </a>
        <a href={hero.secondaryButton.link} class="bg-white text-[var(--color-ocean-blue)] px-8 py-4 rounded-full text-lg font-semibold hover:bg-gray-100 transition">
          {hero.secondaryButton.text}
        </a>
      </div>
    </div>
  </section>

  <!-- What We Offer -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-center mb-16 text-gray-900">{whatWeOffer.sectionTitle}</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        {whatWeOffer.items.map((item, index) => (
          <div class="text-center">
            <div class="w-20 h-20 bg-[var(--color-ocean-blue)] rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {index === 0 && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />}
                {index === 1 && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />}
                {index === 2 && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />}
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4">{item.title}</h3>
            <p class="text-gray-600">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold mb-6 text-gray-900">{callToAction.heading}</h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        {callToAction.description}
      </p>
      <a href={callToAction.buttonLink} class="inline-block btn-lava px-10 py-4 rounded-full text-lg font-semibold">
        {callToAction.buttonText}
      </a>
    </div>
  </section>

  <!-- Instagram Feed Placeholder -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-center mb-12 text-gray-900">Follow Our Journey</h2>
      <div class="text-center mb-8">
        <p class="text-gray-600 mb-6">See our latest adventures on social media</p>
        <div class="flex justify-center gap-6">
          <a href={siteSettings.facebookUrl} target="_blank" rel="noopener" class="btn-ocean px-8 py-3 rounded-lg">
            Visit our Facebook
          </a>
          <a href={siteSettings.instagramUrl} target="_blank" rel="noopener" class="bg-gradient-to-r from-purple-600 to-pink-600 text-white px-8 py-3 rounded-lg hover:opacity-90 transition">
            View Instagram
          </a>
        </div>
      </div>
      <div id="instagram-feed" class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <!-- Instagram photos will be loaded here via JavaScript -->
        <div class="aspect-square bg-gray-200 rounded-lg animate-pulse"></div>
        <div class="aspect-square bg-gray-200 rounded-lg animate-pulse"></div>
        <div class="aspect-square bg-gray-200 rounded-lg animate-pulse"></div>
        <div class="aspect-square bg-gray-200 rounded-lg animate-pulse"></div>
      </div>
    </div>
  </section>

  <!-- Sponsors & Partners Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-center mb-4 text-gray-900">Our Sponsors & Partners</h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        We're grateful for the support of these amazing organizations who help make our paddling dreams a reality
      </p>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center">
        <!-- Sponsor placeholders - replace with actual logos -->
        <div class="bg-white p-8 rounded-lg shadow-md flex items-center justify-center h-32 hover:shadow-lg transition">
          <div class="text-center">
            <div class="text-gray-400 font-semibold mb-2">Sponsor Logo</div>
            <p class="text-xs text-gray-500">Add logo to /public/sponsors/</p>
          </div>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md flex items-center justify-center h-32 hover:shadow-lg transition">
          <div class="text-center">
            <div class="text-gray-400 font-semibold mb-2">Sponsor Logo</div>
            <p class="text-xs text-gray-500">Add logo to /public/sponsors/</p>
          </div>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md flex items-center justify-center h-32 hover:shadow-lg transition">
          <div class="text-center">
            <div class="text-gray-400 font-semibold mb-2">Sponsor Logo</div>
            <p class="text-xs text-gray-500">Add logo to /public/sponsors/</p>
          </div>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md flex items-center justify-center h-32 hover:shadow-lg transition">
          <div class="text-center">
            <div class="text-gray-400 font-semibold mb-2">Sponsor Logo</div>
            <p class="text-xs text-gray-500">Add logo to /public/sponsors/</p>
          </div>
        </div>
      </div>

      <div class="mt-12 text-center">
        <p class="text-gray-700 mb-4 font-semibold">Interested in becoming a sponsor?</p>
        <a href="/contact" class="inline-block btn-ocean px-8 py-3 rounded-full font-semibold">
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>

