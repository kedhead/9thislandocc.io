---
import Layout from '../layouts/Layout.astro';
import membershipData from '../../public/data/membership.json';

const { tiers } = membershipData;
---

<Layout title="Membership - 9th Island OCC">
  <div class="bg-gradient-to-b from-[var(--color-ocean-blue)] to-[var(--color-ocean-dark)] text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-4">Join Our Ohana</h1>
      <p class="text-xl opacity-90">Become part of the 9th Island family</p>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Membership Benefits -->
    <div class="mb-16">
      <h2 class="text-4xl font-bold text-center mb-12 text-gray-900">Membership Benefits</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow-lg p-8 text-center">
          <div class="w-20 h-20 bg-[var(--color-ocean-blue)] rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Training Access</h3>
          <p class="text-gray-600">Full access to all practice sessions and coaching</p>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-8 text-center">
          <div class="w-20 h-20 bg-[var(--color-ocean-blue)] rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Race Eligibility</h3>
          <p class="text-gray-600">Compete in local, regional, and national races</p>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-8 text-center">
          <div class="w-20 h-20 bg-[var(--color-ocean-blue)] rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Community Events</h3>
          <p class="text-gray-600">Join social gatherings and cultural celebrations</p>
        </div>
      </div>
    </div>

    <!-- Membership Levels -->
    <div class="mb-16">
      <h2 class="text-4xl font-bold text-center mb-12 text-gray-900">Membership Options</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {tiers.map((tier, index) => (
          <div class={`bg-white rounded-lg shadow-lg p-8 border-t-4 ${index === 1 ? 'border-[var(--color-lava-orange)] relative' : 'border-[var(--color-ocean-blue)]'}`}>
            {index === 1 && (
              <div class="absolute top-0 right-0 bg-[var(--color-lava-orange)] text-white px-4 py-1 text-sm font-semibold">
                Popular
              </div>
            )}
            <h3 class="text-2xl font-bold mb-4 text-gray-900">{tier.name}</h3>
            <div class={`text-4xl font-bold mb-6 ${index === 1 ? 'text-[var(--color-lava-orange)]' : 'text-[var(--color-ocean-blue)]'}`}>
              {tier.price}
            </div>
            <p class="text-gray-600 mb-4">{tier.description}</p>
            <ul class="space-y-3 mb-8">
              {tier.benefits.map((benefit) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">{benefit}</span>
                </li>
              ))}
            </ul>
            <button class={`membership-select w-full py-3 rounded-lg font-semibold ${index === 1 ? 'btn-lava' : 'btn-ocean'}`} data-type={tier.name}>
              Select
            </button>
          </div>
        ))}
      </div>
    </div>

    <!-- Registration Form -->
    <div id="registration-form" class="max-w-3xl mx-auto bg-white rounded-lg shadow-lg p-8 hidden">
      <h2 class="text-3xl font-bold mb-6 text-gray-900">Membership Registration</h2>
      <form id="membershipForm" class="space-y-6">
        <input type="hidden" id="membershipType" name="membershipType" />

        <!-- Personal Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="firstName" class="block text-sm font-semibold text-gray-700 mb-2">First Name *</label>
            <input type="text" id="firstName" name="firstName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-ocean-blue)] focus:border-transparent" />
          </div>

          <div>
            <label for="lastName" class="block text-sm font-semibold text-gray-700 mb-2">Last Name *</label>
            <input type="text" id="lastName" name="lastName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-ocean-blue)] focus:border-transparent" />
          </div>
        </div>

        <div>
          <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email *</label>
          <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-ocean-blue)] focus:border-transparent" />
        </div>

        <div>
          <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">Phone *</label>
          <input type="tel" id="phone" name="phone" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-ocean-blue)] focus:border-transparent" />
        </div>

        <div>
          <label for="experience" class="block text-sm font-semibold text-gray-700 mb-2">Paddling Experience *</label>
          <select id="experience" name="experience" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-ocean-blue)] focus:border-transparent">
            <option value="">Select your experience level</option>
            <option value="none">No experience</option>
            <option value="beginner">Beginner (less than 1 year)</option>
            <option value="intermediate">Intermediate (1-3 years)</option>
            <option value="advanced">Advanced (3+ years)</option>
          </select>
        </div>

        <div>
          <label for="emergency" class="block text-sm font-semibold text-gray-700 mb-2">Emergency Contact Name *</label>
          <input type="text" id="emergency" name="emergency" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-ocean-blue)] focus:border-transparent" />
        </div>

        <div>
          <label for="emergencyPhone" class="block text-sm font-semibold text-gray-700 mb-2">Emergency Contact Phone *</label>
          <input type="tel" id="emergencyPhone" name="emergencyPhone" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-ocean-blue)] focus:border-transparent" />
        </div>

        <div>
          <label for="comments" class="block text-sm font-semibold text-gray-700 mb-2">Comments / Questions</label>
          <textarea id="comments" name="comments" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-ocean-blue)] focus:border-transparent"></textarea>
        </div>

        <div class="flex items-start">
          <input type="checkbox" id="waiver" name="waiver" required class="mt-1 mr-3" />
          <label for="waiver" class="text-sm text-gray-700">
            I understand and agree to the club's safety guidelines and waiver terms. *
          </label>
        </div>

        <div id="form-message" class="hidden p-4 rounded-lg"></div>

        <div class="flex gap-4">
          <button type="submit" class="flex-1 btn-lava font-semibold py-4 px-8 rounded-lg text-lg">
            Submit Registration
          </button>
          <button type="button" id="cancel-form" class="px-8 py-4 border-2 border-gray-300 rounded-lg font-semibold text-gray-700 hover:bg-gray-50 transition">
            Cancel
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  // Show registration form when membership type selected
  const selectButtons = document.querySelectorAll('.membership-select');
  const registrationForm = document.getElementById('registration-form');
  const membershipTypeInput = document.getElementById('membershipType') as HTMLInputElement;
  const cancelButton = document.getElementById('cancel-form');

  selectButtons.forEach(button => {
    button.addEventListener('click', () => {
      const type = button.getAttribute('data-type');
      if (membershipTypeInput && type) {
        membershipTypeInput.value = type;
      }
      registrationForm?.classList.remove('hidden');
      registrationForm?.scrollIntoView({ behavior: 'smooth' });
    });
  });

  cancelButton?.addEventListener('click', () => {
    registrationForm?.classList.add('hidden');
  });

  // Form submission
  const form = document.getElementById('membershipForm') as HTMLFormElement;
  const messageDiv = document.getElementById('form-message') as HTMLDivElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    // Show loading state
    const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitButton.textContent;
    submitButton.textContent = 'Submitting...';
    submitButton.disabled = true;

    // Simulate submission - replace with actual form handler
    setTimeout(() => {
      messageDiv.className = 'p-4 rounded-lg bg-green-100 text-green-800';
      messageDiv.textContent = `Thank you for your membership registration! We'll contact you at ${data.email} with next steps.`;
      messageDiv.classList.remove('hidden');
      form.reset();
      submitButton.textContent = originalText || 'Submit Registration';
      submitButton.disabled = false;

      setTimeout(() => {
        registrationForm?.classList.add('hidden');
        window.scrollTo({ top: 0, behavior: 'smooth' });
      }, 3000);
    }, 1000);
  });
</script>
